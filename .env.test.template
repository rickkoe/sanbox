# Test Environment Configuration for Sanbox
# Copy this file to .env.test on your test server
# and fill in the actual values

# ============================================
# CRITICAL: Generate a secure SECRET_KEY
# ============================================
# Run this command to generate a secure key:
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=REPLACE_WITH_SECURE_GENERATED_KEY

# ============================================
# Django Settings
# ============================================
# Can enable DEBUG for test environment if needed
DEBUG=False

# ============================================
# Security Settings
# ============================================
# Add your test server domain(s) here
ALLOWED_HOSTS=sanbox-test.esilabs.com,localhost,127.0.0.1

# CORS Settings - More permissive for testing
CORS_ALLOW_ALL_ORIGINS=False
CORS_ALLOWED_ORIGINS=http://sanbox-test.esilabs.com,http://localhost:3000,http://127.0.0.1:3000

# CSRF Settings
CSRF_TRUSTED_ORIGINS=http://sanbox-test.esilabs.com,http://localhost:3000,http://127.0.0.1:3000

# SSL/HTTPS Settings (usually False for test environment)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# ============================================
# Database Settings
# ============================================
POSTGRES_DB=sanbox_test_db
POSTGRES_USER=sanbox_test_user
POSTGRES_PASSWORD=REPLACE_WITH_TEST_DATABASE_PASSWORD
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ============================================
# Redis Settings
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=1

# ============================================
# Celery Settings
# ============================================
CELERY_WORKERS=2
CELERY_LOG_LEVEL=DEBUG

# ============================================
# Logging
# ============================================
DJANGO_LOG_LEVEL=DEBUG
DJANGO_LOG_FILE=/var/www/sanbox-test/logs/django.log

# ============================================
# Application Version
# ============================================
VERSION=test-latest

# ============================================
# Email Settings (Optional - use console backend for testing)
# ============================================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend