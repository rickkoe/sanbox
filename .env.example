# Environment variables template for Sanbox application
# Copy this file to .env.dev for development or .env for production
# and update the values as needed

# ============================================================================
# Django Settings
# ============================================================================
DJANGO_SECRET_KEY=change-this-to-a-random-secret-key-in-production
DJANGO_SETTINGS_MODULE=sanbox.settings_docker
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,sanbox.esilabs.com

# Log levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
DJANGO_LOG_LEVEL=INFO
CELERY_LOG_LEVEL=INFO

# ============================================================================
# Database Settings (PostgreSQL)
# ============================================================================
POSTGRES_DB=sanbox_db
POSTGRES_USER=sanbox_user
POSTGRES_PASSWORD=change-this-password-in-production
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ============================================================================
# Redis Settings
# ============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# ============================================================================
# Static and Media Files
# ============================================================================
STATIC_ROOT=/app/static/
STATIC_URL=/django-static/
MEDIA_ROOT=/app/media/
MEDIA_URL=/media/

# ============================================================================
# CORS Settings
# ============================================================================
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost
CORS_ALLOW_ALL_ORIGINS=True

# ============================================================================
# CSRF Settings
# ============================================================================
# Comma-separated list of trusted origins
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost,http://sanbox.esilabs.com

# ============================================================================
# Session and Cookie Settings
# ============================================================================
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_SAMESITE=Lax
CSRF_COOKIE_SECURE=False
CSRF_COOKIE_SAMESITE=Lax

# ============================================================================
# Email Settings (Optional)
# ============================================================================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=localhost
EMAIL_PORT=25
EMAIL_USE_TLS=False
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# ============================================================================
# Security Settings (Production)
# ============================================================================
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# ============================================================================
# React Build Variables (Optional)
# ============================================================================
REACT_APP_VERSION=1.0.0
REACT_APP_BUILD_DATE=2024-01-01
REACT_APP_COMMIT_HASH=unknown
REACT_APP_BRANCH=main

# ============================================================================
# Container-specific Settings
# ============================================================================
# Number of Gunicorn workers (production)
GUNICORN_WORKERS=4

# Number of Celery workers
CELERY_WORKERS=4

# Compose project name
COMPOSE_PROJECT_NAME=sanbox
