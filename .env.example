# Django Settings
DJANGO_SECRET_KEY=change-this-to-a-random-secret-key-in-production
DEBUG=False

# Database Settings
POSTGRES_DB=sanbox_db
POSTGRES_USER=sanbox_user
POSTGRES_PASSWORD=change-this-password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis Settings
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# CORS Settings (Important: Set your domain here)
# For production with HTTPS, add your domain with https:// prefix
# Example: CORS_ALLOWED_ORIGINS=https://sanbox.example.com,http://localhost:3000
CORS_ALLOW_ALL_ORIGINS=False
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Security Settings
# For production, add your domain name
# Example: ALLOWED_HOSTS=sanbox.example.com,localhost,127.0.0.1
ALLOWED_HOSTS=localhost,127.0.0.1

# Celery Settings
CELERY_WORKERS=4

# Application Version
VERSION=latest
