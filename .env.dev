# Development environment variables for Sanbox
# This file contains safe defaults for local development

# Django Settings
DJANGO_SECRET_KEY=django-insecure-dev-key-do-not-use-in-production
DJANGO_SETTINGS_MODULE=sanbox.settings_docker
DEBUG=True
ALLOWED_HOSTS=*

DJANGO_LOG_LEVEL=DEBUG
CELERY_LOG_LEVEL=DEBUG

# Database Settings (PostgreSQL)
POSTGRES_DB=sanbox_dev
POSTGRES_USER=sanbox_dev
POSTGRES_PASSWORD=sanbox_dev_password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis Settings
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Static and Media Files
STATIC_ROOT=/app/static/
STATIC_URL=/django-static/
MEDIA_ROOT=/app/media/
MEDIA_URL=/media/

# CORS Settings (permissive for development)
CORS_ALLOW_ALL_ORIGINS=True

# CSRF Settings
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost,http://localhost:80,http://localhost:8000

# Session and Cookie Settings
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_SAMESITE=Lax
CSRF_COOKIE_SECURE=False
CSRF_COOKIE_SAMESITE=Lax

# Email Settings (console backend for development)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# React Build Variables
REACT_APP_VERSION=dev
REACT_APP_API_URL=http://localhost:8000

# Container Settings
GUNICORN_WORKERS=2
CELERY_WORKERS=2
COMPOSE_PROJECT_NAME=sanbox_dev
