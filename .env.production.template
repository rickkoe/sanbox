# Production Environment Template for Sanbox
# Copy this to /var/www/sanbox/.env on your production server
# and update with your actual production values

# ============================================================================
# Django Settings
# ============================================================================
DJANGO_SECRET_KEY=YOUR-PRODUCTION-SECRET-KEY-GENERATE-A-LONG-RANDOM-STRING
DJANGO_SETTINGS_MODULE=sanbox.settings_docker
DEBUG=False
ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# Log levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
DJANGO_LOG_LEVEL=WARNING
CELERY_LOG_LEVEL=WARNING

# ============================================================================
# Database Settings (PostgreSQL)
# ============================================================================
POSTGRES_DB=sanbox_prod
POSTGRES_USER=sanbox_prod_user
POSTGRES_PASSWORD=YOUR-STRONG-DATABASE-PASSWORD-HERE
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ============================================================================
# Redis Settings
# ============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# ============================================================================
# Static and Media Files
# ============================================================================
STATIC_ROOT=/app/static/
STATIC_URL=/django-static/
MEDIA_ROOT=/app/media/
MEDIA_URL=/media/

# ============================================================================
# CORS Settings
# ============================================================================
# Update with your actual production domain
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com
CORS_ALLOW_ALL_ORIGINS=False

# ============================================================================
# CSRF Settings
# ============================================================================
# Update with your actual production domain
CSRF_TRUSTED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# ============================================================================
# Session and Cookie Settings
# ============================================================================
# Set to True if using HTTPS (recommended for production)
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_SAMESITE=Lax
CSRF_COOKIE_SECURE=True
CSRF_COOKIE_SAMESITE=Lax

# ============================================================================
# Email Settings (Configure your SMTP server)
# ============================================================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@your-domain.com
EMAIL_HOST_PASSWORD=your-email-password

# ============================================================================
# Security Settings (Production)
# ============================================================================
# Enable these after confirming HTTPS is working
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# ============================================================================
# Container-specific Settings
# ============================================================================
# Adjust based on your server resources
GUNICORN_WORKERS=4
CELERY_WORKERS=2

# Compose project name
COMPOSE_PROJECT_NAME=sanbox_prod
